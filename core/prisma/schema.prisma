datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id            String          @id @default(uuid()) @db.Uuid
  email         String          @unique
  password      String          @db.VarChar(128)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  AdminSessions AdminSessions[]
}

model AdminSessions {
  id           String   @id @default(uuid()) @db.Uuid
  admin        Admin    @relation(fields: [adminId], references: [id])
  adminId      String   @db.Uuid
  refreshToken String   @unique
  createdAt    DateTime @default(now())
}

model ComparisonCategory {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String   @db.VarChar(128)
  description String   @default("")
}

model ComparisonEntity {
  id                                        String                                      @id @default(uuid()) @db.Uuid
  createdAt                                 DateTime                                    @default(now())
  updatedAt                                 DateTime                                    @updatedAt
  title                                     String                                      @db.VarChar(128)
  description                               String                                      @default("")
  type                                      ComparisonEntityType
  link                                      String
  ComparisonEntity_ComparisonEntityCategory ComparisonEntity_ComparisonEntityCategory[]
}

model ComparisonEntity_ComparisonEntityCategory {
  id                         String                   @id @default(uuid()) @db.Uuid
  createdAt                  DateTime                 @default(now())
  updatedAt                  DateTime                 @updatedAt
  comparisonEntity           ComparisonEntity         @relation(fields: [comparisonEntityId], references: [id])
  comparisonEntityId         String                   @db.Uuid @map("comparison_entity-constraint")
  comparisonEntityCategory   ComparisonEntityCategory @relation(fields: [comparisonEntityCategoryId], references: [id])
  comparisonEntityCategoryId String                   @db.Uuid @map("comparis_entity_category-constraint")
}

model ComparisonEntityCategory {
  id                                        String                                      @id @default(uuid()) @db.Uuid
  createdAt                                 DateTime                                    @default(now())
  updatedAt                                 DateTime                                    @updatedAt
  title                                     String                                      @db.VarChar(128)
  description                               String                                      @default("")
  ComparisonEntity_ComparisonEntityCategory ComparisonEntity_ComparisonEntityCategory[]
}

enum ComparisonEntityType {
  INTAGRATED_VIDEO
  IMAGE
  TEXT
}
